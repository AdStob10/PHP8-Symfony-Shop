{% extends 'base.html.twig' %}

{% block title %}E-Shop - Delete {{ product.name}}{% endblock %}

{% block body %}

<div class='d-flex'>

    <div class='mr-5'>
          {{ render_esi(controller(
        'App\\Controller\\CategoryController::getCategories')) }}
    </div>
    <div class='flex-fill text-center' style='padding-left:10%;padding-right:10%;'>

        <h1 class='mb-3'>Delete product - {{product.id}}  {{ product.name }}</h1>
        <p class='text-danger fs-3 fw-bolder'>Are you sure you want to delete this product?<br></p>
        <div class='text-center px-5 w-30'>
        <form action="{{ path('delete_prod', { id: product.id }) }}" method="post">
        <input type="hidden" name="token" value="{{ csrf_token('delete' ~ product.id) }}"/>
        <button type="submit" class='btn btn-danger'>Delete</button>
        </form>
        </div>
    </div>
</div>

{% endblock %}
