{% extends 'base.html.twig' %}

{% block title %}E-Shop - Edit {{ category.name}}{% endblock %}

{% block body %}

<div class='d-flex'>

    <div class='mr-5'>
          {{ render_esi(controller(
        'App\\Controller\\CategoryController::getCategories')) }}
    </div>
    <div class='flex-fill text-center' style='padding-left:10%;padding-right:10%;'>

        <h1 class='mb-3'>Delete category - {{ category.name }}</h1>
        <p class='text-danger fs-3 fw-bolder'>Pick category to transfer products or leave field empty to delete category with products<br></p>
        <div class='text-center px-5 w-30'>
        {{ form(form) }}
        </div>
    </div>
</div>

{% endblock %}
